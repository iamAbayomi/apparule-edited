<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_01"
    android:backgroundTint="#534c4c"
    android:backgroundTintMode="multiply"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/customerFullNameField"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#e7d9d9"
        android:ems="10"
        android:hint="BUSINESS NAME"
        android:inputType="textPersonName"
        android:textColorHint="#e7d9d9"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline10" />

    <EditText
        android:id="@+id/passowrd"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#e7d9d9"
        android:ems="10"
        android:hint="ADDRESS"
        android:inputType="textPersonName"
        android:textColorHint="#efe5e5"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/password_signinField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/password_signinField"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#e7d9d9"
        android:ems="10"
        android:hint="COUNTRY"
        android:inputType="textPersonName"
        android:textColorHint="#e7d9d9"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/designerContinue_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passowrd" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="73dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBaseline_toBaselineOf="@id/imageView22"
        app:layout_constraintEnd_toStartOf="@+id/imageView22"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView22"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteY="31dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/designerContinue_button"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:onClick="designer"
        app:cardBackgroundColor="#fff700"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toTopOf="@+id/designer_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_signinField">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="designerSignUP"
            android:text="CONTINUE" />
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/editText"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#e7d9d9"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName"
        android:textColorHint="#e7d9d9"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/passowrd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerFullNameField" />

    <TextView
        android:id="@+id/designer_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="signup"
        android:text="@string/sign_in_here"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
        android:textColor="#e7d9d9"
        android:textSize="10sp"

        app:layout_constraintBottom_toTopOf="@+id/cuesoftText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/designerContinue_button"
        app:layout_constraintVertical_bias="0.295" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="120dp"
        android:layout_height="27dp"

        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_text_white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="#e7d9d9"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@id/designer_signup"
        app:layout_constraintEnd_toStartOf="@+id/designer_signup"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cuesoftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="34dp"
        android:text="Copyright @ 2019 Cuesoft Ltd"
        android:textColor="#e7d9d9"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/designer_signup" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="123dp" />

</android.support.constraint.ConstraintLayout>