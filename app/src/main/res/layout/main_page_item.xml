<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/itemsImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/product04"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="32dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="24dp"
            android:layout_height="34dp"

            android:layout_alignBottom="@id/itemsImageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="-34dp"
            app:srcCompat="@drawable/ic_send_black_24dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="24dp"
            android:layout_height="34dp"
            android:layout_below="@+id/itemsImageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"

            app:srcCompat="@drawable/ic_favorite_black_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView12"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:text="5 HOURS AGO"
                android:textColor="#BCA1A1"
                android:textSize="8sp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="220dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="10dp"
                android:text="Nikita Couture"
                android:textColor="#000000"
                android:textSize="12sp" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="192dp" />

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="34dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/product04" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignTop="@id/imageView7"

            android:layout_marginStart="12dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="64dp"
            android:text="VanillaDress" />

        <TextView
            android:id="@+id/decriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/titleText"

            android:layout_marginStart="12dp"
            android:layout_marginTop="21dp"
            android:text="A great dress made just for you" />

        <TextView
            android:id="@+id/priceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/decriptionText"
            android:layout_marginStart="12dp"
            android:layout_marginTop="0dp"
            android:text="#14,000" />


    </RelativeLayout>
</android.support.v7.widget.CardView>